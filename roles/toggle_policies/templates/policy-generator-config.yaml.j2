apiVersion: policy.open-cluster-management.io/v1
kind: PolicyGenerator
metadata:
  name: compliance-operator-policies

policyDefaults:
  namespace: policies
  remediationAction: enforce
  placement:
    labelSelector:
      matchLabels:
        "{{ placement_label_key }}": "{{ placement_label_value }}"

policies:
  - name: install-compliance-operator
    disabled: false
    remediationAction: enforce
    manifests:
      - path: compliance-operator/install

  - name: scan-setting-periodic
    disabled: false
    remediationAction: enforce
    manifests:
      - path: compliance-operator/scan-setting

  - name: run-cis-scan
    remediationAction: enforce
    disabled: {{ not (cis_scan_enabled | default(true) | bool) }}
    manifests:
      - path: compliance-operator/profiles/cis

  - name: run-pci-scan
    remediationAction: enforce
    disabled: {{ not (pci_scan_enabled | default(false) | bool) }}
    manifests:
      - path: compliance-operator/profiles/pci
